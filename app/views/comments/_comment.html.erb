<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= button_to "Destroy Comment", [comment.article, comment],
      method: :delete, 
      onclick: "return confirm('Are you sure?')",
      class: "btn btn-danger"
    %>
  </p>
<% end %>